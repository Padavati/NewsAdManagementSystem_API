@{
}
<h2>Login</h2>
<hr />
<form method="post">
    <div class="form-group">
        <label for="Firstname">Email ID</label>
        <input type="text" class="form-control" asp-for="EmailID">
    </div>
    <div class="form-group">
        <label for="Pwd">Password</label>
        <input type="text" class="form-control" asp-for="Pwd">
    </div>
    <input type="submit" class="btn btn-primary" value="Login">
    <button type="button" class="btn btn-secondary">Reset</button>
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
    <hr />
    <a asp-controller="User" asp-action="Register">Register</a>
</form>